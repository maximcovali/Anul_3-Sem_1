<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <TextView
        android:id="@+id/profileUsernameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bogdan"
        android:layout_row="0"
        android:layout_column="0"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginStart="@dimen/default_margin_top"
        android:layout_row="0"
        android:background="@mipmap/ic_launcher_round" />
    <TextView android:id="@+id/totalTasksTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total number of tasks: 7"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/default_margin_top"/>
    <TextView android:id="@+id/todayTasksTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of tasks for today: 4"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/default_margin_top"/>
    <TextView android:id="@+id/doneTasksTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of tasks done: 2"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/default_margin_top"/>
</GridLayout>